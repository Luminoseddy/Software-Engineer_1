<% include partials/header %>
<!-- Create the new book here -->

<div class ="container">
    <div class="row">
        <h1 style= "text-align: center;">Create a new Book</h1>
        <div style = "width: 30%; margin: 25px auto;">
        <form action = "/books" method = "POST">
            <div class="form-group">
                <input class = "form-control" type="text" name="name" placeholder="name">
            </div>
            
            <div class="form-group">
                <input class = "form-control" type="text" name="image" placeholder="image">
            </div>
            
            <div class="form-group">
                <input class = "form-control" type="text" name="description" placeholder="description">
            </div>
            
            <div class="form-group">
                <input class = "form-control" type="text" name="genre" placeholder="genre">
            </div>
            
            <div class="form-group">
                <input class = "form-control" type="text" name="publishedInfo" placeholder="publishedInfo">
            </div>
            
            <div class="form-group">
                <input class = "form-control" type="text" name="rating" placeholder="rating">
            </div>
            
            <div class="form-group">
                <button class = "btn btn-lg btn-primary btn-block"> Submit! </button>
            </div>
        </form>
        <a href="/books">Go Back</a>
    </div>
</div>
<% include partials/footer %> 



