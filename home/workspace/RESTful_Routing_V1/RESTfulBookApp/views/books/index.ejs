 <!--This is how we link the classes with each other -->
 <!--Home Page-->
<% include ../partials/header %>
<div class ="container">
    <div class="row">
        <div class="col-lg-6" >
        <!--<section id="book">-->
        <!--    <div class="card">-->
                
        <!--    </div>-->
        <!--</section>-->
        <% books.forEach(function(book){ %>
        <div style = "width: 75%; margin: auto;">
            <div class="jumbotron">
                 <div style = "width: 75%; margin: auto;">
                    <div class="form-group">
                       <h4><%= book.name %></h4>
                    </div>
           
                    <div class="form-group" style="width: 40px; length: 60px;">
                        <img src="<%= book.image%>"class="thumbnail">
                    </div>

                    <div class="form-group">
                        <h4>Description</h4>
                        <li><%=book.description.substring(0, 100)%> .....</li>
                        <a href="/books/<%= book._id %>">Read more</a>
                    </div>
                    
                    <div class="form-group">
                        <label>Date purchased</label>
                        <li><span><%=book.created.toDateString()%></span></li>
                    </div>
                 
                    <!--Press the button delete>> activates method delete >> sends it to POST method-->
                    <form id="delete" action="/books/<%=book._id %>?_method=DELETE" method="POST">
                        <button class="btn btn-lg btn-primary btn-block" style="width: 30%;">Delete</button>
                    </form>
                 </div>
                 </div>
            </div>
        </div>
    </div>
</div>
<% }) %>
<% include ../partials/footer %>




